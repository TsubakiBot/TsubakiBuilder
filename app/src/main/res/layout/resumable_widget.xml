<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.Dantotsu.AppWidgetContainer">

    <ImageView
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/linear_gradient_black"
        tools:ignore="ContentDescription"/>

    <RelativeLayout
        android:id="@+id/widgetContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/widgetBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/leftFlipper"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/ic_round_arrow_back_ios_new_24"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/widgetTitle"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:maxLines="2"
                android:ellipsize="none"
                android:text="@string/continue_media"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/rightFlipper"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:layout_weight="0"
                android:foregroundGravity="center_vertical"
                android:rotation="180"
                android:src="@drawable/ic_round_arrow_back_ios_new_24"
                tools:ignore="ContentDescription"/>

        </LinearLayout>

        <AdapterViewFlipper
            android:id="@+id/widgetViewFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:autoStart="true"
            android:flipInterval="30000"
            android:visibility="gone" />

        <StackView
            android:id="@+id/widgetStackView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/widgetBanner"
            android:visibility="gone" />

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/no_media_to_display"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
