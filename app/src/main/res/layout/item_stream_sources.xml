<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/animeSourceYT"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/yt_red"
            android:fontFamily="@font/poppins_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/play_yt"
            android:textColor="@color/bg_white"
            android:visibility="gone"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_round_play_circle_24"
            app:iconTint="@color/bg_white"
            tools:ignore="TextContrastCheck"
            tools:visibility="visible" />

        <Button
            android:id="@+id/animeSourceHulu"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/hulu_green"
            android:fontFamily="@font/poppins_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/play_hulu"
            android:textColor="@color/bg_white"
            android:visibility="gone"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_round_play_circle_24"
            app:iconTint="@color/bg_white"
            tools:ignore="TextContrastCheck"
            tools:visibility="visible" />

        <Button
            android:id="@+id/animeSourceCR"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/cr_orange"
            android:fontFamily="@font/poppins_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/play_cr"
            android:textColor="@color/bg_white"
            android:visibility="gone"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_round_play_circle_24"
            app:iconTint="@color/bg_white"
            tools:ignore="TextContrastCheck"
            tools:visibility="visible" />

    </LinearLayout>

    <ani.dantotsu.view.FadingEdgeRecyclerView
        android:id="@+id/episodeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="8dp"
        android:nestedScrollingEnabled="true"
        android:requiresFadingEdge="vertical"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="12"
        tools:orientation="vertical" />
</LinearLayout>