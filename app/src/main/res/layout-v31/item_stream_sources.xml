<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:clipToOutline="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/animeSourceYT"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@color/yt_red"
            android:contentDescription="@string/play_yt"
            android:padding="6dp"
            android:visibility="gone"
            app:tint="@color/yt_red"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/animeSourceHulu"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@color/hulu_green"
            android:contentDescription="@string/play_hulu"
            android:padding="6dp"
            android:visibility="gone"
            app:tint="@color/hulu_green"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/animeSourceDisney"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@color/dp_teal"
            android:contentDescription="@string/play_dp"
            android:padding="6dp"
            android:visibility="gone"
            app:tint="@color/dp_teal"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/animeSourceNetflix"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@color/nf_red"
            android:contentDescription="@string/play_nf"
            android:padding="6dp"
            android:visibility="gone"
            app:tint="@color/nf_red"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/animeSourceCR"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@color/cr_orange"
            android:contentDescription="@string/play_cr"
            android:padding="6dp"
            android:visibility="gone"
            app:tint="@color/cr_orange"
            tools:visibility="visible" />
    </LinearLayout>

    <ani.dantotsu.view.FadingEdgeRecyclerView
        android:id="@+id/episodeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="8dp"
        android:nestedScrollingEnabled="true"
        android:requiresFadingEdge="vertical"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="12"
        tools:orientation="vertical" />
</LinearLayout>